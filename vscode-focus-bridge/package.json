{
  "name": "vscode-focus-bridge",
  "displayName": "VS Code Focus Fortress",
  "publisher": "RohitKhatri",
  "version": "0.0.3",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "vsce package"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "focusFortress.start",
        "title": "Focus Fortress: Start server"
      },
      {
        "command": "focusFortress.stop",
        "title": "Focus Fortress: Stop server"
      },
      {
        "command": "focusFortress.restart",
        "title": "Focus Fortress: Restart server"
      },
      {
        "command": "focusFortress.status",
        "title": "Focus Fortress: Show status"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Focus Fortress",
      "properties": {
        "focusFortress.port": {
          "type": "number",
          "default": 9876,
          "description": "Local WebSocket server port for Chrome to connect to."
        },
        "focusFortress.heartbeatIntervalSec": {
          "type": "number",
          "default": 10,
          "description": "Seconds between heartbeat messages."
        },
        "focusFortress.inactivityTimeoutSec": {
          "type": "number",
          "default": 120,
          "description": "Seconds of inactivity after which 'active' becomes false."
        },
        "focusFortress.secretToken": {
          "type": "string",
          "default": "",
          "description": "Optional secret token that clients must send as first message for simple auth."
        },
        "focusFortress.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the Focus Fortress WebSocket server when VS Code starts."
        }
      }
    }
  },
  "dependencies": {
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "@types/ws": "^8.18.1",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37"
  }
}
