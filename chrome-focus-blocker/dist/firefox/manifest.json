{
  "manifest_version": 2,
  "name": "Focus Blocker (Firefox)",
  "version": "1.0.0",
  "description": "Blocks distracting sites when you're actively coding in VS Code (WebSocket).",
  "permissions": ["storage", "tabs", "notifications", "<all_urls>"],
  "background": { "scripts": ["background.js"] },
  "browser_action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "48": "icons/icon48.png", "128": "icons/icon128.png" },
  "applications": {
    "gecko": {
      "id": "focus-blocker@example.com",
      "strict_min_version": "109.0"
    }
  }
}
